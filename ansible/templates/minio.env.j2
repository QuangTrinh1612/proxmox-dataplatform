# MinIO Environment Configuration
# Root credentials
MINIO_ROOT_USER={{ minio_root_user }}
MINIO_ROOT_PASSWORD={{ minio_root_password }}

# Server configuration
MINIO_VOLUMES="{{ minio_data_dir }}"
MINIO_OPTS="--address {{ minio_address }} --console-address {{ minio_console_address }}"

# Region (important for S3 compatibility)
MINIO_REGION={{ minio_region }}

# Optional: Browser settings
MINIO_BROWSER=on

# Optional: Domain (for virtual-host-style requests)
# MINIO_DOMAIN=minio.example.com

# Optional: Server URL (for console redirect)
# MINIO_SERVER_URL=https://minio.example.com
